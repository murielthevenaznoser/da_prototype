{
  "$schema": "https://dataapibuilder.azureedge.net/schemas/latest/dab.draft.schema.json",
  "data-source": {
    "database-type": "mssql",
    "connection-string": "@env('AZURE_SQL_APP_USER')"
  },
  "runtime": {
    "rest": {
      "path": "/rest"
    },
    "graphql": {
      "path": "/graphql"
    },
    "host": { 
      "mode": "development",     
      "cors": {
        "origins": [ ],
        "allow-credentials": false
      },
      "authentication": {
        "provider": "StaticWebApps"
      }
    }
  },
  "entities": {
    "Medications": {
      "source": "dbo.medications",
      "rest": {
        "path": "medications"
      },
      "permissions": [
        {
          "role": "anonymous",
          "actions": [
            {
              "action": "*",
              "policy": {
                "database": "@item.owner_id eq 'public'"
              }
            }            
          ]
        },
        {
          "role": "authenticated",
          "actions": [
            {
              "action": "*",
              "policy": {
                "database": "@item.owner_id eq @claims.userId"
              }
            }            
          ]
        }        
      ],
      "mappings": {
        "position": "order"
      }      
    },
    "Categories": {
      "source": "dbo.categories",
      "rest": {
        "path": "categories"
      },
      "permissions": [
        {
          "role": "anonymous",
          "actions": [
            {
              "action": "*",
              "policy": {
                "database": "@item.owner_id eq 'public'"
              }
            }            
          ]
        },
        {
          "role": "authenticated",
          "actions": [
            {
              "action": "*",
              "policy": {
                "database": "@item.owner_id eq @claims.userId"
              }
            }            
          ]
        }        
      ],
      "mappings": {
        "position": "order"
      }      
    }
  }
}
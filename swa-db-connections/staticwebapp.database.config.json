{
  "$schema": "https://dataapibuilder.azureedge.net/schemas/latest/dab.draft.schema.json",
  "data-source": {
    "database-type": "mssql",
    "connection-string": "@env('AZURE_SQL_APP_USER')"
  },
  "runtime": {
    "rest": {
      "path": "/rest",
      "enabled": true
    },
    "graphql": {
      "path": "/graphql",
      "enabled": false
    },
    "host": { 
      "mode": "development",     
      "cors": {
        "origins": [ ],
        "allow-credentials": false
      },
      "authentication": {
        "provider": "StaticWebApps"
      }
    }
  },
  "entities": {
    "Medication": {
      "source": "dbo.medications",
      "rest": {
        "path": "/medication",
        "methods": [ "get" ]
      },
      "permissions": [
        {
          "actions": ["read"],
          "role": "anonymous"
        }
      ],
      "mappings": {
        "medications_name": "name",
        "medications_categoryId": "categoryId"
      }
    },
    "Categorie": {
      "source": "dbo.categories",
      "rest": {
        "path": "/categorie",
        "methods": [ "get" ]
      },
      "permissions": [        
        {
        "actions": ["read"],
        "role": "anonymous"
        }
      ]
    }
  }
}
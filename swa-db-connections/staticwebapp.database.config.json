{
  "$schema": "https://dataapibuilder.azureedge.net/schemas/latest/dab.draft.schema.json",
  "data-source": {
    "database-type": "mssql",
    "connection-string": "@env('AZURE_SQL_APP_USER')"
  },
  "runtime": {
    "rest": {
      "path": "/rest"
    },
    "graphql": {
      "path": "/graphql"
    },
    "host": { 
      "mode": "development",     
      "cors": {
        "origins": [ ],
        "allow-credentials": false
      },
      "authentication": {
        "provider": "StaticWebApps"
      }
    }
  },
  "entities": {
    "Medication": {
      "source": "dbo.medications",
      "rest": {
        "path": "medication"
      },
      "permissions": [
        {
          "actions": ["read"],
          "role": "anonymous"
        }
      ]
    },
    "Categorie": {
      "source": "dbo.categories",
      "rest": {
        "path": "categorie"
      },
      "permissions": [        
        {
        "actions": ["read"],
        "role": "anonymous"
        }
      ]
    }
  }
}